`ifndef APB_AGENT_TYPES_SV
  `define APB_AGENT_TYPES_SV

	typedef virtual apb_if apb_vif;

    typedef enum bit {APB_READ = 0, APB_WRITE = 1} apb_dir ;

    typedef bit[`APB_MAX_ADDR_WIDTH:0] apb_address ;

    typedef bit[`APB_MAX_DATA_WIDTH:0] apb_data ;

	typedef enum bit {APB_OKAY = 0, APB_ERR = 1} apb_response ;



`endif	
